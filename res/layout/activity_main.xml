<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/abc_action_bar_default_height"
    tools:context="com.example.holamundo.MainActivity"
    tools:ignore="MergeRootFrame" >
	
     <Button
        android:id="@+id/button1"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/abc_dropdownitem_text_padding_left"
        android:text="@string/Patada"
        android:onClick="sendMessage"
         />

     <EditText
         android:id="@+id/editText1"
         android:layout_width="wrap_content"
         android:layout_height="187dp"
         android:ems="10"
         android:hint="@string/edit_message" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/Rey"
         android:textAppearance="?android:attr/textAppearanceLarge" />
    
</FrameLayout>
